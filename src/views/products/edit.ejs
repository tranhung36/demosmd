<section class="py-5 my-5">
    <form class="container" method="POST" action="/products/<%= product._id %>?_method=PUT">
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" value="<%= product.title %>" name="title" required>
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input type="text" class="form-control" id="description" value="<%= product.description %>"
                name="description" required>
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input type="text" class="form-control" id="price" value="<%= product.price %>" name="price" required>
        </div>
        <div class="form-group">
            <label for="image">Image</label>
            <input type="file" class="form-control" id="image" value="<%= product.image %>" name="image">
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</section>